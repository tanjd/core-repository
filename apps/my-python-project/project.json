{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "my-python-project",
  "projectType": "application",
  "sourceRoot": "apps/my-python-project/my_python_project",
  "tags": [],
  "targets": {
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "options": {
        "bundleLocalDependencies": true,
        "lockedVersions": true,
        "outputPath": "apps/my-python-project/dist",
        "publish": false
      },
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "echo": {
      "executor": "@tanjd/nx-poetry-cli:serve",
      "options": {
        "textToEcho": "test"
      }
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "args": "",
        "cacheDir": ".cache/pypoetry",
        "debug": false,
        "silent": false,
        "verbose": false
      }
    },
    "lint": {
      "executor": "@nxlv/python:ruff-check",
      "options": {
        "lintFilePatterns": [
          "my_python_project",
          "tests"
        ]
      },
      "outputs": []
    },
    "lock": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry lock --no-update",
        "cwd": "apps/my-python-project"
      }
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry run pytest tests/",
        "cwd": "apps/my-python-project"
      },
      "outputs": [
        "{workspaceRoot}/reports/apps/my-python-project/unittests",
        "{workspaceRoot}/coverage/apps/my-python-project"
      ]
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    }
  }
}
